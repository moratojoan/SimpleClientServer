<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPerfil">

    <Button
        android:id="@+id/btn_p_eliminarnotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="120dp"
        android:text="Eliminar Totes Notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_p_acceptar" />

    <TextView
        android:id="@+id/txt_p_usuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:text="Usuari"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_p_eliminarusuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="Eliminar Perfil"
        app:layout_constraintBottom_toBottomOf="@+id/txt_p_usuari"
        app:layout_constraintStart_toEndOf="@+id/txt_p_usuari"
        app:layout_constraintTop_toTopOf="@+id/txt_p_usuari" />

    <EditText
        android:id="@+id/txt_p_contrasenya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Contrasenya"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/txt_p_usuari"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_usuari" />

    <Button
        android:id="@+id/btn_p_acceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="44dp"
        android:text="Acceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_contrasenya" />

    <Button
        android:id="@+id/btn_p_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="Cancelar"
        app:layout_constraintStart_toEndOf="@+id/btn_p_acceptar"
        app:layout_constraintTop_toTopOf="@+id/btn_p_acceptar" />
</android.support.constraint.ConstraintLayout>